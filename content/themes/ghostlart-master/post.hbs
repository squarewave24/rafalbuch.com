{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}
{{! The main content area on the homepage }}
<main class="content" role="main">
<div class="container">
	<div id="primary">
		<div id="content" role="main">
        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}
            <article class="post">
                <h1 class="title">
				    {{{title}}}
                </h1>
				<div class="post-meta">
				    <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time> {{tags prefix="on " separator=" | "}}							
				</div>
                <div class="the-content">
                    {{content}}
                </div>
                <div style="border-top: dotted 1px;">
				    <div class="share" style="float:right;">
	                    <h4>Share this post:
                            <a href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                                <strong>twitter</strong>
                            </a> | 
                            <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                                <strong>facebook</strong>
                            </a> | 
                            <a href="https://plus.google.com/share?url={{url absolute="true"}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                                <strong>google+</strong>
                            </a>
                        </h4>
                    </div>
                    <!--Disqus Comment Section-->
			            <div id="disqus_thread"></div>
			            <script type="text/javascript">
			            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
			            var disqus_shortname = 'leoadhemartan'; // required: replace example with your forum shortname
			            /* * * DON'T EDIT BELOW THIS LINE * * */
			            (function() {
			            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
			            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
			            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
			            })();
			            </script>
			            <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
			            <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
			        <!--Disqus Comment Section-->
				</div>
            </article>
        {{/post}}
        </div>
 	</div>
</div>
</main>